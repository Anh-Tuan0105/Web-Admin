extends ../layouts/default.pug

block title 
    title Nhóm quyền
block main 
    h1.box-title Nhóm quyền

    //- Section 5
    .section-5 
        .inner-wrap 
            .inner-change-status 
                .inner-item 
                    select 
                        option(value="") -- Hành động --
                        option(value="") Hoạt động
                        option(value="") Tạm dừng
                        option(value="") Xóa
                .inner-item 
                    button Áp dụng
            .inner-search 
                <i class="fa-solid fa-magnifying-glass"></i> 
                input(type="text" placeholder="Tìm kiếm")
            .inner-button-create 
                a(href="#") + Tạo mới 
    //- End Section 5

    //- Section 6
    .section-6 
        .table-2 
            table 
                thead 
                    tr 
                        th 
                            input(type="checkbox" class="inner-check")
                        th Tên nhóm quyền
                        th Mô tả ngắn
                        th Hành động
                tbody 
                    tr 
                        td 
                            input(type="checkbox" class="inner-check") 
                        td Quản trị viên
                        td Có đầy đủ các quyền
                        td 
                            .inner-buttons
                                a(href="#" class="inner-edit")
                                    <i class="fa-solid fa-pen-to-square"></i>
                                a(href="#" class="inner-delete")
                                    <i class="fa-solid fa-trash-can"></i>
                    tr 
                        td 
                            input(type="checkbox" class="inner-check") 
                        td Quản lý tour
                        td Có đầy đủ quyền liên quan đến tour
                        td 
                            .inner-buttons
                                a(href="#" class="inner-edit")
                                    <i class="fa-solid fa-pen-to-square"></i>
                                a(href="#" class="inner-delete")
                                    <i class="fa-solid fa-trash-can"></i>
                    tr 
                        td 
                            input(type="checkbox" class="inner-check") 
                        td Quản lý đơn hàng
                        td Có đầy đủ quyền liên quan đến đơn hàng
                        td 
                            .inner-buttons
                                a(href="#" class="inner-edit")
                                    <i class="fa-solid fa-pen-to-square"></i>
                                a(href="#" class="inner-delete")
                                    <i class="fa-solid fa-trash-can"></i>
    //- End Section 6

    //- Section 7
    include ../partials/section-7.pug
    //- End Section 7
