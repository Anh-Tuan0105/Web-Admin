extends ../layouts/default.pug

block title 
    title Tạo danh mục
block main 
    h1.box-title Tạo danh mục

    //- Section 8
    .section-8 
        form
            .inner-group
                label(class="inner-label" for="name") Tên danh mục  
                input(type="text" name="name" id="name")
            .inner-group
                label(class="inner-label" for="parent") Danh mục cha  
                select(name="parent" id="parent") 
                    option(value="") -- Chọn danh mục -- 
                    option(value="") Danh mục 1 
                    option(value="") Danh mục 2
                    option(value="") Danh mục 3 
            .inner-group
                label(class="inner-label" for="position") Vị trí  
                input(type="text" name="position" id="position")
            .inner-group
                label(class="inner-label" for="status") Trạng thái  
                select(name="status" id="status") 
                    option(value="") Hoạt động
                    option(value="") Tạm dừng
                    option(value="") Khởi tạo
            .inner-group.inner-two-col
                label(class="inner-label" for="avatar") Ảnh đại diện  
                input(type="file" name="avatar" id="avatar" accept="image/*" filepond-image)
            .inner-group.inner-two-col
                label(class="inner-label" for="description") Mô tả  
                textarea(name="description" id="description" placeholder="Mô tả danh mục 2..." textarea-mce)
            .inner-button.inner-two-col
                button Tạo mới
        .inner-back 
            a(href="#") Quay lại danh sách
    //- End Section 8