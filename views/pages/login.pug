extends ../layouts/account.pug

block title
    title Đăng nhập
block main 
    .form-account
        h2.inner-title Đăng nhập
        p.inner-desc Vui lòng nhập email và mật khẩu để tiếp tục
        
        form.inner-form(action="#")
            .inner-group 
                label(for="email" class="inner-label") Email
                input(
                    type="email"
                    name="email"
                    class="inner-control"
                    id="email" 
                    placeholder="Ví dụ: levana@gmail.com"
                ) 
            .inner-group 
                label(for="password" class="inner-label") Mật khẩu
                input(
                    type="password"
                    name="password"
                    class="inner-control"
                    id="password" 
                ) 
            .inner-meta 
                .inner-confirm 
                    input(
                        type="checkbox"
                        name="rememberPass" 
                        class="inner-check" 
                        id="rememberPass"
                    )
                    label(
                        for="rememberPass" 
                        class="inner-label"
                    ) Nhớ mật khẩu       
                a(href="#" class="inner-forgot-password") Quên mật khẩu?
            button(class="inner-button") Đăng Nhập

        .inner-more 
            span Bạn chưa có tài khoản?   
            a(href="#") Tạo tài khoản